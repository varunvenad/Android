<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Sharlotte gange"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/name"
        android:scaleType="centerCrop"
        android:src="@drawable/img7"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/img_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:background="@drawable/img7"
        app:cardCornerRadius="75dp">
        <ImageView
            android:layout_width="150dp"
            android:src="@drawable/img8"
            android:scaleType="centerCrop"
            android:layout_height="150dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        android:text="Sharlotte gange"
        android:textColor="@color/black"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Art.Travel.Fashion"
        android:textSize="16dp"/>
    <LinearLayout
        android:id="@+id/art"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/desc"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img7"
            app:cardCornerRadius="75dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/eye"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Art"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/message"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/desc"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/art"
        android:layout_toStartOf="@id/message"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img7"
            app:cardCornerRadius="75dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/messenger"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Message"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/log"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/desc"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/message"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img7"
            app:cardCornerRadius="75dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/more"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Log"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/desc"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/log"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/notification"
            app:cardCornerRadius="75dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Log"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/text_area_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/log"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/portfolio"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:text="Editor at AdvertiseMint"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_area_1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/portfolio"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:text="Former PAD events manager at SACC"
            android:textSize="16dp"/>
    </LinearLayout>
</RelativeLayout>