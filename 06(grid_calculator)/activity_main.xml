    </LinearLayout>
    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:rowCount="5"
        android:columnCount="4">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="AC"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="CLEAR"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="%"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="+"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="7"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="8"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="9"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="X"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="4"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="5" android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="6"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="-"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="1"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="2"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="3"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="+"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="0"
            android:layout_margin="4dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="."
            android:layout_margin="4dp"/>
        <Button
            android:layout_height="64dp"
            android:text="="
            android:layout_columnWeight="2"
            android:layout_columnSpan="2"
            android:layout_margin="4dp"/>
    </GridLayout>
</LinearLayout>